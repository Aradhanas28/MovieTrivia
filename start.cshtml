@{
    ViewData["Title"] = "Start Quiz";
}

<div class="text-center mt-5">
    <h1>🎬 Movie Trivia Quiz 🎬</h1>
    <form asp-action="StartGame" method="post" class="mt-3">
        <input type="text" name="playerName" class="form-control w-50 mx-auto" placeholder="Enter your name" required />
        <button type="submit" class="btn btn-primary mt-3">Start Quiz</button>
    </form>
</div>
